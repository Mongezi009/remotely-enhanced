# Remotely Enhanced Environment Configuration
# Copy this file to .env and modify the values

# Domain Configuration
DOMAIN=remotely.yourdomain.com

# Database Configuration
DB_TYPE=SQLite
# For SQLite (default)
SQLITE_PATH=/app/AppData/Remotely.db

# For SQL Server (uncomment and configure if using)
# DB_TYPE=SQLServer
# DB_SERVER=remotely-db
# DB_NAME=RemotelyEnhanced
# DB_USER=sa
# DB_PASSWORD=RemotelyEnhanced123!

# For PostgreSQL (uncomment and configure if using)
# DB_TYPE=PostgreSQL
# DB_SERVER=remotely-db
# DB_NAME=RemotelyEnhanced
# DB_USER=postgres
# DB_PASSWORD=RemotelyEnhanced123!

# Redis Configuration (for caching and session management)
REDIS_HOST=remotely-redis
REDIS_PORT=6379
REDIS_PASSWORD=RemotelyRedis123!

# Security Configuration
JWT_SECRET=YourSuperSecretJWTKeyHereMinimum32Characters
ENCRYPTION_KEY=YourEncryptionKeyHereMinimum32Characters

# Application Settings
MAX_ORGANIZATIONS=-1
ENFORCE_ATTENDED_ACCESS=false
ENABLE_REMOTE_CONTROL_RECORDING=false
DATA_RETENTION_DAYS=30
THEME=Dark

# Enhanced Features
ENABLE_COMPREHENSIVE_SCANNING=true
SCAN_INTERVAL_MINUTES=60
QUICK_UPDATE_INTERVAL_MINUTES=5
ENABLE_SECURITY_SCANNING=true
ENABLE_PERFORMANCE_MONITORING=true
MAX_CONCURRENT_REMOTE_SESSIONS=10
ENABLE_AUDIO_STREAMING=false
DEFAULT_STREAM_QUALITY=High
ENABLE_FILE_STREAMING=true
MAX_FILE_STREAM_SIZE_MB=1024

# SSL Configuration
SSL_CERT_PATH=/https/remotely.pfx
SSL_CERT_PASSWORD=remotely

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Remotely Enhanced
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Logging Configuration
LOG_LEVEL=Information
ENABLE_HTTP_LOGGING=false
ENABLE_WINDOWS_EVENT_LOG=false

# CORS Configuration (comma-separated domains)
TRUSTED_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Known Proxies (comma-separated IPs)
KNOWN_PROXIES=172.20.0.1,10.0.0.1

# Development Settings (only for development)
ASPNETCORE_ENVIRONMENT=Production
ENABLE_SWAGGER=false
ALLOW_API_LOGIN=false